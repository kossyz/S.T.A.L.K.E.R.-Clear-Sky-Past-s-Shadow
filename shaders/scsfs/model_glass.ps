#include "common.h"


struct 	v2p
{
 	float2 	tc0	: TEXCOORD0;	// base
 	float3 	tc1	: TEXCOORD1;	// environment
  	float3	c0	: COLOR0;		// sun
	float  fog	: FOG;

};

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
//TextureCube	s_env;		//	Environment for forward rendering
Texture2D 	s_env;		//	Environment for forward rendering


float4 	main	( v2p I )	: SV_Target
{
	float4	tc0 	= s_base.Sample( smp_base, I.tc0);
	float4	t_env 	= s_env.Sample( smp_rtlinear, I.tc1);

	float3 	base 	= lerp		(t_env,tc0,tc0.a);
	float3	light	= I.c0;
	float4 c_color = {0.1f, 0.1f, 0.1f, 0.1f};
	float3	final 	= light*base.rgb+c_color;


	//	Fogging
	final 	= lerp(fog_color, final, I.fog);

	// out
	//return  float4	(final.r,final.g,final.b,tc0.a*I.fog*I.fog);
	return  float4	(final,tc0.a*I.fog*I.fog);


	
}
